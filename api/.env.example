# =============================================================================
# SECURITY WARNING: This is an example file. DO NOT use these values in production!
# Generate secure keys and passwords for production deployment.
# =============================================================================

# Database Configuration
# For development: PostgreSQL recommended with strong credentials
# Example: postgresql+asyncpg://username:secure_password@localhost:5432/agentifui_pro
DATABASE_URL=postgresql+asyncpg://agentifui:CHANGE_ME_SECURE_PASSWORD@localhost:5432/agentifui_pro

# For testing: SQLite (faster startup)
# DATABASE_URL=sqlite+aiosqlite:///./test_agentifui_pro.db

# Application Configuration
PROJECT_NAME="AgentifUI-Pro Backend"
PROJECT_VERSION="1.0.0"
DEBUG=false  # SECURITY: Always false in production
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1

# CORS Configuration (restrict origins in production)
# SECURITY: Only allow specific domains in production
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security Configuration
# SECURITY: Generate a cryptographically secure secret key
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_TO_32_CHAR_SECURE_SECRET_KEY_MINIMUM
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development Features (disable in production)
ENABLE_DOCS=false  # SECURITY: Disable API docs in production
ENABLE_REDOC=false  # SECURITY: Disable ReDoc in production

# Additional Security Headers (production)
# ENABLE_SECURITY_HEADERS=true
# TRUSTED_HOSTS=["yourdomain.com", "api.yourdomain.com"]