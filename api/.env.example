# FastAPI Backend Configuration
# Copy this file to .env and update values for your environment

# Application Settings
# Note: APP_NAME, APP_VERSION, APP_DESCRIPTION are defined in pyproject.toml
# Only override these if you need different values at runtime (not recommended)
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
# PostgreSQL connection string format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/agentifui_pro

# Database Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_POOL_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5
DATABASE_HEALTH_CHECK_TIMEOUT=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Settings
# Multiple formats supported:
# - Comma-separated (recommended): http://localhost:3000,https://example.com
# - JSON array: ["http://localhost:3000","https://example.com"]
# - Single value: http://localhost:3000
CORS_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Environment
ENVIRONMENT=development

# Feature Flags
ENABLE_DOCS=true
ENABLE_REDOC=true
